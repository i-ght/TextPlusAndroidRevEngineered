<Window x:Class="textplus.chatagent.wpf.glueauth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:textplus.chatagent.wpf"
        mc:Ignorable="d"
        Title="Auth" Width="300" Height="115" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Loaded="Window_Loaded" Closed="Window_Closed" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="LblUsername" Content="Username:" FontWeight="Bold"></Label>
                <TextBox x:Name="TxtUsername" Width="221"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="LblPassword" Content="Password:" FontWeight="Bold"></Label>
                <TextBox x:Name="TxtPassword" Width="221"></TextBox>
            </StackPanel>
            <Button x:Name="BtnLogin" Content="Login" Click="BtnLogin_Click"></Button>
            <Label x:Name="LblStatus" Content="Status: Idle"></Label>
        </StackPanel>
    </Grid>
</Window>
